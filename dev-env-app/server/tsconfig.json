{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src", "hardhat.config.ts"],
  "exclude": ["node_modules"],
	"compilerOptions": {
		"target": "es2020",
		"module": "CommonJS",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
    "lib": ["ES2021"]
  }
}
